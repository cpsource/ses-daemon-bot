[Unit]
Description=SES Daemon Bot - AWS SES mail processor for FrFlashy.com
After=network.target postgresql.service

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/ses-daemon-bot
Environment=PATH=/home/ubuntu/mnt/myproject/bin:/usr/bin
EnvironmentFile=/home/ubuntu/.env
ExecStart=/home/ubuntu/mnt/myproject/bin/python main.py --log-file /var/log/ses-daemon-bot.log
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
